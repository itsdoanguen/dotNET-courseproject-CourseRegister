@model dotNET_courseproject_CourseRegister.ViewModels.Student.StudentCourseListViewModel

@{
	Layout = "~/Views/Shared/_LayoutStudent.cshtml";
	ViewData["Title"] = "Danh sách khóa học";
}

<section class="py-5 bg-light min-vh-100">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Danh sách khóa học</h2>
        <div class="mt-5 text-center">
            <span class="text-muted">Tổng số khóa học: @Model.TotalCourses</span>
        </div>

        <br />

        @* Khóa học sắp full *@
        @if (Model.NearlyFullCourses.Any())
        {
            <h4 class="text-danger fw-bold my-4">⚡ Khóa học sắp hết nhận đăng ký!</h4>
            <div class="row g-4">
                @foreach (var course in Model.NearlyFullCourses)
                {
                    @Html.Partial("_CourseCardPartial", course)
                }
            </div>
        }

        @* Khóa học còn chỗ bình thường *@
        @if (Model.NormalCourses.Any())
        {
            <h4 class="text-primary fw-bold my-4">Các khóa học còn nhận đăng ký</h4>
            <div class="row g-4">
                @foreach (var course in Model.NormalCourses)
                {
                    @Html.Partial("_CourseCardPartial", course)
                }
            </div>
        }

        @* Khóa học đã đầy / hết hạn *@
        @if (Model.FullOrClosedCourses.Any())
        {
            <h4 class="text-muted fw-bold my-4">Khóa học đã kết thúc đăng ký</h4>
            <div class="row g-4">
                @foreach (var course in Model.FullOrClosedCourses)
                {
                    @Html.Partial("_CourseCardPartial", course)
                }
            </div>
        }
    </div>
</section>

