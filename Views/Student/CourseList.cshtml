@model dotNET_courseproject_CourseRegister.ViewModels.Student.StudentCourseListViewModel

@{
	Layout = "~/Views/Shared/_LayoutStudent.cshtml";
	ViewData["Title"] = "Danh sách khóa học";
}

<section class="py-5 bg-light min-vh-100">
	<div class="container">
		<h2 class="text-center mb-5 fw-bold">Danh sách khóa học</h2>
		<div class="mt-5 text-center">
			<span class="text-muted">Tổng số khóa học: @Model.TotalCourses</span>
		</div>
		<br />
		<div class="row g-4">
			@foreach (var course in Model.CourseList)
			{
				<div class="col-12 col-sm-6 col-md-4 col-lg-3">
					<div class="card h-100 shadow-sm rounded-4">
						<a asp-controller="Student" asp-action="ViewCourse" asp-route-courseName="@course.CourseName" class="text-decoration-none text-dark">
							<img src="@course.CourseImage" class="card-img-top rounded-top-4" alt="Ảnh khóa học" style="height: 180px; object-fit: cover;" />
							<div class="card-body">
								<h5 class="card-title fw-bold">@course.CourseName</h5>
								<p class="card-text text-muted small">@course.TeacherName</p>
								<p class="card-text small">
									@(course.CourseDescription?.Length > 80 ? course.CourseDescription.Substring(0, 77) + "..." : course.CourseDescription)
								</p>
							</div>
							<div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
								<span class="fw-bold text-primary">@string.Format("{0:N0} VNĐ", course.Cost)</span>
								<small class="text-muted">@course.Duration tuần</small>
							</div>
						</a>
					</div>
				</div>
			}
		</div>
	</div>
</section>
