@{
    ViewData["Title"] = "Nạp tiền";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container" style="max-width: 600px; margin-top: 40px;">
    <div class="card shadow p-4 rounded-4">
        <h2 class="text-center mb-4">Nạp tiền vào tài khoản</h2>

        <form asp-action="Deposit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Số tiền</label>
                <input type="text" name="money" id="moneyInput" class="form-control" placeholder="Nhập số tiền..." required />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Profile" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-success">Xác nhận nạp</button>
            </div>
        </form>
    </div>
</div>

<script>
    const input = document.getElementById("moneyInput");
    input.addEventListener("input", function () {
        let value = input.value.replace(/\D/g, "");
        input.value = new Intl.NumberFormat().format(value);
    });
</script>
