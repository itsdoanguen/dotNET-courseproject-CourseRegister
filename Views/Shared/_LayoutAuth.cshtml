<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - dotNET learning</title>

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS -->
	<link href="~/css/authorization.css" rel="stylesheet" />
</head>

<body>

	<!-- Navbar -->
	<header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
		<div class="container-fluid">
			<!-- Logo -->
			<a class="navbar-brand d-flex align-items-center" asp-controller="Auth" asp-action="Index">
				<strong>dotNET learning</strong>
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
				<span class="navbar-toggler-icon"></span>
			</button>

			<!-- Content -->
			<div class="collapse navbar-collapse" id="navbarContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<!-- Dropdown 1 -->
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="discoverDropdown" role="button" data-bs-toggle="dropdown">
							Điều hướng
						</a>
						<ul class="dropdown-menu">
							<li><a class="dropdown-item" href="#">Trang chủ</a></li>
							<li><a class="dropdown-item" href="#">Khám phá</a></li>
						</ul>
					</li>
				</ul>

				<!-- Buttons -->
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="btn btn-outline-primary me-2" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
						</li>
						<li class="nav-item">
							<a class="btn btn-primary" asp-controller="Auth" asp-action="Register">Đăng ký</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</header>

	<!-- Dynamic Content (RenderBody) -->
	<main class="p-0 m-0">
		@RenderBody()
	</main>

	<!-- Footer -->
	<footer class="bg-dark text-white text-center py-3">
		<div class="container">
			<p>&copy; 2025 dotNET learning. All rights reserved.</p>
		</div>
	</footer>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
