<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TechSkill Academy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/authorization.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>  

    <!-- Navbar -->
    <header class="navbar navbar-expand-lg navbar-dark fixed-top shadow" style="background-color: #004578;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4" asp-controller="Auth" asp-action="Index">TechSkill Academy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Auth/Index#home">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Auth/Index#about">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Auth/Index#courses">Khóa học</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Auth/Index#testimonials">Học viên nói gì</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Auth/Index#contact">Liên hệ</a></li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-outline-light me-2" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                    <a class="btn btn-light text-dark" asp-controller="Auth" asp-action="Register">Đăng ký</a>
                </div>
            </div>
        </div>
    </header>


    <!-- Dynamic Content -->
    <main class="p-0 m-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-4 pb-3 mt-5">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>TechSkill Academy</h5>
                    <p>Nâng cao kỹ năng IT, chạm tới sự nghiệp mơ ước.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Về chúng tôi</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Khóa học</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Hỗ trợ</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Kết nối với chúng tôi</h6>
                    <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i> Facebook</a><br />
                    <a href="#" class="text-white"><i class="bi bi-envelope"></i> Email: support@techskill.vn</a>
                </div>
            </div>
            <div class="text-center pt-3 border-top border-secondary mt-3">
                &copy; 2025 TechSkill Academy. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

