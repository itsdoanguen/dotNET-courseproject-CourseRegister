@model dotNET_courseproject_CourseRegister.ViewModels.Student.CourseList

<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 shadow-sm rounded-4 d-flex flex-column">
        <a asp-controller="Student" asp-action="CourseDetails" asp-route-id="@Model.CourseId" class="text-decoration-none text-dark d-flex flex-column h-100">

            <div style="height: 170px; overflow: hidden;">
                <img src="@Model.CourseImage" class="card-img-top rounded-top-4" alt="Ảnh khóa học" style="height: 100%; width: 100%; object-fit: cover;" />
            </div>

            <div class="card-body d-flex flex-column flex-grow-1">
                <h5 class="card-title fw-bold text-truncate">@Model.CourseName</h5>
                <p class="card-text text-muted small">@Model.TeacherName</p>
                <p class="card-text small flex-grow-1">
                    @(Model.CourseDescription?.Length > 80 ? Model.CourseDescription.Substring(0, 77) + "..." : Model.CourseDescription)
                </p>
                <p class="card-text small mb-0">Hạn cuối đăng ký: @Model.StartedTime.ToString("dd/MM/yyyy")</p>

                <!-- Hiển thị badge "Tạm dừng" nếu khóa học bị tạm dừng -->
                @if (Model.Status == "Inactive")
                {
                    <span class="badge bg-danger mt-2">Tạm dừng</span>
                }
            </div>

            <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center mt-auto">
                <span class="fw-bold text-primary">@string.Format("{0:N0} VNĐ", Model.Cost)</span>
                <small class="text-muted">@Model.Duration buổi</small>
            </div>

        </a>
    </div>
</div>
