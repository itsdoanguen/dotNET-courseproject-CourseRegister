@model dotNET_courseproject_CourseRegister.ViewModels.Student.CourseList

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card h-100 shadow-sm rounded-4">
        <a asp-controller="Student" asp-action="CourseDetails" asp-route-id="@Model.CourseId" class="text-decoration-none text-dark">
            <img src="@Model.CourseImage" class="card-img-top rounded-top-4" alt="Ảnh khóa học" style="height: 180px; object-fit: cover;" />
            <div class="card-body">
                <h5 class="card-title fw-bold">@Model.CourseName</h5>
                <p class="card-text text-muted small">@Model.TeacherName</p>
                <p class="card-text small">
                    @(Model.CourseDescription?.Length > 80 ? Model.CourseDescription.Substring(0, 77) + "..." : Model.CourseDescription)
                </p>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                <span class="fw-bold text-primary">@string.Format("{0:N0} VNĐ", Model.Cost)</span>
                <small class="text-muted">@Model.Duration tuần</small>
            </div>
        </a>
    </div>
</div>
