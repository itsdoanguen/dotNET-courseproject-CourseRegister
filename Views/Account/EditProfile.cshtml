@model dotNET_courseproject_CourseRegister.ViewModels.Student.StudentEditorViewModel

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container" style="max-width: 600px; margin-top: 40px;">
    <div class="card shadow p-4" style="border-radius: 20px;">
        <h2 class="text-center mb-4" style="font-weight: bold;">Chỉnh sửa hồ sơ</h2>

        <form asp-action="EditProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label" style="font-weight: 600;"></label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên đầy đủ..." />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label" style="font-weight: 600;"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại..." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DOB" class="form-label" style="font-weight: 600;"></label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary" style="width: 48%;">Lưu thay đổi</button>
                <a asp-controller="Student" asp-action="Profile" class="btn btn-danger" style="width: 48%;">Hủy</a>
            </div>
        </form>
    </div>
</div>
